<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@android:color/white"
    android:background="@drawable/mobile_wallpapers_360_640_16"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rl2745.earlydementiadetection.LoginActivity"
    android:orientation="vertical">

    <EditText android:id="@+id/user_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:hint="@string/prompt_user_name"/>

    <EditText
        android:id="@+id/user_dob_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/prompt_user_dob"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:inputType="date" />


    <EditText
        android:id="@+id/doctor_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_doctor_name"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/doctor_number_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_doctor_number"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:inputType="phone" />

    <Button
        android:id="@+id/submit_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/submit"
        android:textStyle="bold"
        android:onClick="sendLogin" />

</LinearLayout>
